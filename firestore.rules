rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.active == true;
    }
    
    // Users collection - User profiles
    match /users/{userId} {
      // Users can read and write their own profile
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Verification requests - Pending user verifications
    match /verificationRequests/{requestId} {
      // Users can create their own verification request
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Users can read their own verification request
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Only admins can update or delete verification requests
      allow update, delete: if isAdmin();
      // Admins can read all verification requests
      allow list: if isAdmin();
    }
    
    // Teams collection - Existing rule, keep as is
    match /teams/{teamId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Players collection - Existing rule, keep as is
    match /players/{playerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Games collection - Existing rule, keep as is
    match /games/{gameId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // News collection - Existing rule, keep as is
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Partners collection - Existing rule, keep as is
    match /partners/{partnerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Committee collection - Existing rule, keep as is
    match /committee/{committeeId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Standings collection - Existing rule, keep as is
    match /standings/{standingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Schedule collection - Existing rule, keep as is
    match /schedule/{scheduleId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Referees collection - Existing rule, keep as is
    match /referees/{refereeId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Team traffic collection - Existing rule, keep as is
    match /teamTraffic/{trafficId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Admins collection - Existing rule, keep as is
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Audit logs collection - Existing rule, keep as is
    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
    }
  }
}
